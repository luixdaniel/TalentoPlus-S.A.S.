﻿@{
    ViewData["Title"] = "Inicio";
}

<div class="text-center">
    <div class="jumbotron bg-light p-5 rounded mb-4">
        <h1 class="display-3">
            <i class="fas fa-briefcase text-primary"></i> TalentoPlus S.A.S.
        </h1>
        <p class="lead">Sistema de Gestión de Recursos Humanos</p>
        <hr class="my-4">
        <p>Plataforma completa para la administración y gestión de empleados</p>
        
        @if (User.Identity?.IsAuthenticated == true)
        {
            <a class="btn btn-primary btn-lg" asp-controller="Empleados" asp-action="Index" role="button">
                <i class="fas fa-users"></i> Ver Empleados
            </a>
        }
        else
        {
            <a class="btn btn-primary btn-lg" asp-area="Identity" asp-page="/Account/Login" role="button">
                <i class="fas fa-sign-in-alt"></i> Iniciar Sesión
            </a>
        }
    </div>

    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-user-plus fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Gestión de Empleados</h5>
                    <p class="card-text">Crea, edita y elimina empleados de forma fácil y rápida.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-building fa-3x text-success mb-3"></i>
                    <h5 class="card-title">Departamentos</h5>
                    <p class="card-text">Organiza tu personal por departamentos y áreas de trabajo.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-chart-line fa-3x text-info mb-3"></i>
                    <h5 class="card-title">Control Total</h5>
                    <p class="card-text">Mantén control sobre salarios, estados y perfiles profesionales.</p>
                </div>
            </div>
        </div>
    </div>
</div>