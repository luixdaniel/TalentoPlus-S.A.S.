@model TalentoPlus_S.A.S.ll.Web.Models.ViewModels.EmployeeViewModel
@{
    ViewData["Title"] = "Detalles del Empleado";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h2 class="mb-0">
                        <i class="bi bi-person-badge"></i> Detalles del Empleado
                    </h2>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h4 class="text-primary">@Model.FullName</h4>
                            <p class="text-muted">@Model.Position</p>
                        </div>
                        <div class="col-md-6 text-end">
                            @if (Model.Status == TalentoPlus_S.A.S.ll.Web.Data.Entities.EmployeeStatus.Active)
                            {
                                <span class="badge bg-success fs-5">Activo</span>
                            }
                            else if (Model.Status == TalentoPlus_S.A.S.ll.Web.Data.Entities.EmployeeStatus.Inactive)
                            {
                                <span class="badge bg-danger fs-5">Inactivo</span>
                            }
                            else
                            {
                                <span class="badge bg-warning fs-5">Vacaciones</span>
                            }
                        </div>
                    </div>

                    <hr />

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <h6 class="text-muted">
                                <i class="bi bi-envelope-fill"></i> Email
                            </h6>
                            <p class="fs-5">@Model.Email</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <h6 class="text-muted">
                                <i class="bi bi-telephone-fill"></i> Teléfono
                            </h6>
                            <p class="fs-5">@Model.Phone</p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <h6 class="text-muted">
                                <i class="bi bi-geo-alt-fill"></i> Dirección
                            </h6>
                            <p class="fs-5">@Model.Address</p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <h6 class="text-muted">
                                <i class="bi bi-calendar-event"></i> Fecha de Nacimiento
                            </h6>
                            <p class="fs-5">@Model.BirthDate.ToString("dd/MM/yyyy")</p>
                        </div>
                        <div class="col-md-4 mb-3">
                            <h6 class="text-muted">
                                <i class="bi bi-calendar-check"></i> Fecha de Ingreso
                            </h6>
                            <p class="fs-5">@Model.HireDate.ToString("dd/MM/yyyy")</p>
                        </div>
                        <div class="col-md-4 mb-3">
                            <h6 class="text-muted">
                                <i class="bi bi-cash-stack"></i> Salario
                            </h6>
                            <p class="fs-5 text-success">$@Model.Salary.ToString("N2")</p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <h6 class="text-muted">
                                <i class="bi bi-building"></i> Departamento
                            </h6>
                            <p class="fs-5">
                                <span class="badge bg-info">@Model.DepartmentName</span>
                            </p>
                        </div>
                        <div class="col-md-4 mb-3">
                            <h6 class="text-muted">
                                <i class="bi bi-mortarboard-fill"></i> Nivel Educativo
                            </h6>
                            <p class="fs-5">
                                <span>@Model.EducationLevelDisplay</span>
                            </p>
                        </div>
                        <div class="col-md-4 mb-3">
                            <h6 class="text-muted">
                                <i class="bi bi-circle-fill"></i> Estado
                            </h6>
                            <p class="fs-5">
                                @if (Model.Status == TalentoPlus_S.A.S.ll.Web.Data.Entities.EmployeeStatus.Active)
                                {
                                    <span class="badge bg-success">@Model.StatusDisplay</span>
                                }
                                else if (Model.Status == TalentoPlus_S.A.S.ll.Web.Data.Entities.EmployeeStatus.Vacation)
                                {
                                    <span class="badge bg-warning text-dark">@Model.StatusDisplay</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">@Model.StatusDisplay</span>
                                }
                            </p>
                        </div>
                        <div class="col-md-4 mb-3">
                            <h6 class="text-muted">
                                <i class="bi bi-briefcase-fill"></i> Cargo
                            </h6>
                            <p class="fs-5">@Model.Position</p>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.ProfessionalProfile))
                    {
                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <h6 class="text-muted">
                                    <i class="bi bi-file-text"></i> Perfil Profesional
                                </h6>
                                <p class="fs-6">@Model.ProfessionalProfile</p>
                            </div>
                        </div>
                    }

                    <hr />

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Volver al Listado
                        </a>
                        <a asp-action="GenerateResumePdf" asp-route-id="@Model.Id" class="btn btn-success" target="_blank">
                            <i class="bi bi-file-earmark-pdf"></i> Generar Hoja de Vida PDF
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="bi bi-pencil"></i> Editar
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Eliminar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
}

