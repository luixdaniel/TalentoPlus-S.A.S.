@model TalentoPlus_S.A.S.ll.Web.Models.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-4 fw-bold text-primary">
                <i class="bi bi-speedometer2"></i> Dashboard
            </h1>
            <p class="lead text-muted">Panel de control y estadísticas del sistema</p>
        </div>
    </div>

    <!-- Tarjetas de Estadísticas -->
    <div class="row g-4 mb-5">
        <!-- Total de Empleados -->
        <div class="col-md-6 col-lg-3">
            <div class="card stat-card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h6 class="text-muted text-uppercase fw-bold small mb-2">Total Empleados</h6>
                            <h2 class="display-4 fw-bold text-primary mb-0">@Model.TotalEmployees</h2>
                        </div>
                        <div class="stat-icon bg-primary bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-people-fill fs-2 text-primary"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Empleados en Vacaciones -->
        <div class="col-md-6 col-lg-3">
            <div class="card stat-card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h6 class="text-muted text-uppercase fw-bold small mb-2">En Vacaciones</h6>
                            <h2 class="display-4 fw-bold text-warning mb-0">@Model.EmployeesOnVacation</h2>
                        </div>
                        <div class="stat-icon bg-warning bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-calendar-check-fill fs-2 text-warning"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Empleados Activos -->
        <div class="col-md-6 col-lg-3">
            <div class="card stat-card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h6 class="text-muted text-uppercase fw-bold small mb-2">Activos</h6>
                            <h2 class="display-4 fw-bold text-success mb-0">@Model.ActiveEmployees</h2>
                        </div>
                        <div class="stat-icon bg-success bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-check-circle-fill fs-2 text-success"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Empleados Inactivos -->
        <div class="col-md-6 col-lg-3">
            <div class="card stat-card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h6 class="text-muted text-uppercase fw-bold small mb-2">Inactivos</h6>
                            <h2 class="display-4 fw-bold text-danger mb-0">@Model.InactiveEmployees</h2>
                        </div>
                        <div class="stat-icon bg-danger bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-x-circle-fill fs-2 text-danger"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Distribución por Departamento -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0 fw-bold">
                        <i class="bi bi-building"></i> Distribución por Departamento
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.DepartmentStatistics.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Departamento</th>
                                        <th class="text-center">Empleados</th>
                                        <th class="text-end">Porcentaje</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var stat in Model.DepartmentStatistics)
                                    {
                                        <tr>
                                            <td class="fw-semibold">@stat.DepartmentName</td>
                                            <td class="text-center">
                                                <span class="badge bg-primary">@stat.EmployeeCount</span>
                                            </td>
                                            <td class="text-end">
                                                <div class="progress" style="height: 20px;">
                                                    <div class="progress-bar bg-gradient" role="progressbar" 
                                                         style="width: @stat.Percentage.ToString("F1")%" 
                                                         aria-valuenow="@stat.Percentage" aria-valuemin="0" aria-valuemax="100">
                                                        @stat.Percentage.ToString("F1")%
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center py-5">No hay datos disponibles</p>
                    }
                </div>
            </div>
        </div>

        <!-- Asistente de IA -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-gradient bg-primary text-white border-0">
                    <h5 class="mb-0 fw-bold">
                        <i class="bi bi-robot"></i> Asistente de IA
                    </h5>
                    <small>Pregunta lo que quieras sobre los empleados</small>
                </div>
                <div class="card-body d-flex flex-column">
                    <!-- Área de respuestas -->
                    <div id="aiResponseArea" class="flex-grow-1 mb-3 p-3 bg-light rounded" style="min-height: 300px; max-height: 400px; overflow-y: auto;">
                        <div class="text-center text-muted py-5">
                            <i class="bi bi-chat-dots fs-1 mb-3 d-block"></i>
                            <p>Haz una pregunta para comenzar...</p>
                            <small class="d-block mt-2">Ejemplos:</small>
                            <div class="mt-2">
                                <button class="btn btn-sm btn-outline-primary m-1 example-query" data-query="¿Cuántos empleados hay en total?">
                                    ¿Cuántos empleados hay en total?
                                </button>
                                <button class="btn btn-sm btn-outline-primary m-1 example-query" data-query="¿Cuántos empleados están en Tecnología?">
                                    ¿Cuántos empleados están en Tecnología?
                                </button>
                                <button class="btn btn-sm btn-outline-primary m-1 example-query" data-query="¿Cuántos empleados están inactivos?">
                                    ¿Cuántos empleados están inactivos?
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Input de consulta -->
                    <div class="input-group">
                        <input type="text" id="aiQueryInput" class="form-control" 
                               placeholder="Escribe tu pregunta aquí..." 
                               aria-label="Consulta de IA">
                        <button class="btn btn-primary" type="button" id="askAiBtn">
                            <i class="bi bi-send-fill"></i> Preguntar
                        </button>
                    </div>
                    <small class="text-muted mt-2">
                        <i class="bi bi-info-circle"></i> La IA responderá basándose en los datos reales del sistema
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <style>
        .stat-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
        }

        .stat-icon {
            width: 60px;
            height: 60px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .progress-bar {
            transition: width 1s ease;
        }

        #aiResponseArea {
            scrollbar-width: thin;
        }

        #aiResponseArea::-webkit-scrollbar {
            width: 8px;
        }

        #aiResponseArea::-webkit-scrollbar-track {
            background: #f1f1f1;
            border-radius: 10px;
        }

        #aiResponseArea::-webkit-scrollbar-thumb {
            background: #888;
            border-radius: 10px;
        }

        #aiResponseArea::-webkit-scrollbar-thumb:hover {
            background: #555;
        }

        .ai-message {
            animation: fadeIn 0.5s ease;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .user-message {
            background: #e3f2fd;
            border-left: 4px solid #2196f3;
            padding: 12px;
            border-radius: 8px;
            margin-bottom: 10px;
        }

        .ai-response {
            background: #f5f5f5;
            border-left: 4px solid #4caf50;
            padding: 12px;
            border-radius: 8px;
            margin-bottom: 10px;
        }

        .loading-dots {
            display: inline-block;
        }

        .loading-dots span {
            animation: blink 1.4s infinite;
            animation-fill-mode: both;
        }

        .loading-dots span:nth-child(2) {
            animation-delay: 0.2s;
        }

        .loading-dots span:nth-child(3) {
            animation-delay: 0.4s;
        }

        @@keyframes blink {
            0%, 80%, 100% {
                opacity: 0;
            }
            40% {
                opacity: 1;
            }
        }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            // Manejar clic en preguntas de ejemplo
            $('.example-query').click(function() {
                const query = $(this).data('query');
                $('#aiQueryInput').val(query);
                askAi();
            });

            // Manejar clic en botón de preguntar
            $('#askAiBtn').click(function() {
                askAi();
            });

            // Manejar Enter en el input
            $('#aiQueryInput').keypress(function(e) {
                if (e.which === 13) {
                    askAi();
                }
            });

            function askAi() {
                const query = $('#aiQueryInput').val().trim();
                
                if (!query) {
                    return;
                }

                // Mostrar mensaje del usuario
                const userMessage = `
                    <div class="user-message ai-message">
                        <strong><i class="bi bi-person-fill"></i> Tú:</strong>
                        <p class="mb-0 mt-1">${escapeHtml(query)}</p>
                    </div>
                `;
                
                // Limpiar mensaje de bienvenida si existe
                if ($('#aiResponseArea').find('.text-center').length > 0) {
                    $('#aiResponseArea').html('');
                }
                
                $('#aiResponseArea').append(userMessage);
                
                // Mostrar indicador de carga
                const loadingMessage = `
                    <div class="ai-response ai-message" id="loadingMessage">
                        <strong><i class="bi bi-robot"></i> Asistente IA:</strong>
                        <p class="mb-0 mt-1">
                            Pensando<span class="loading-dots"><span>.</span><span>.</span><span>.</span></span>
                        </p>
                    </div>
                `;
                $('#aiResponseArea').append(loadingMessage);
                
                // Scroll al final
                $('#aiResponseArea').scrollTop($('#aiResponseArea')[0].scrollHeight);
                
                // Deshabilitar input y botón
                $('#aiQueryInput').prop('disabled', true);
                $('#askAiBtn').prop('disabled', true);

                // Llamar a la API
                $.ajax({
                    url: '@Url.Action("AskAi", "Dashboard", new { area = "Admin" })',
                    type: 'POST',
                    contentType: 'application/json',
                    headers: {
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    },
                    data: JSON.stringify({ query: query }),
                    success: function(response) {
                        $('#loadingMessage').remove();
                        
                        if (response.success) {
                            const aiResponse = `
                                <div class="ai-response ai-message">
                                    <strong><i class="bi bi-robot"></i> Asistente IA:</strong>
                                    <p class="mb-0 mt-1">${escapeHtml(response.answer)}</p>
                                </div>
                            `;
                            $('#aiResponseArea').append(aiResponse);
                        } else {
                            const errorResponse = `
                                <div class="ai-response ai-message border-danger">
                                    <strong><i class="bi bi-exclamation-triangle-fill text-danger"></i> Error:</strong>
                                    <p class="mb-0 mt-1 text-danger">${escapeHtml(response.error || 'Error desconocido')}</p>
                                </div>
                            `;
                            $('#aiResponseArea').append(errorResponse);
                        }
                        
                        // Scroll al final
                        $('#aiResponseArea').scrollTop($('#aiResponseArea')[0].scrollHeight);
                    },
                    error: function(xhr, status, error) {
                        $('#loadingMessage').remove();
                        const errorResponse = `
                            <div class="ai-response ai-message border-danger">
                                <strong><i class="bi bi-exclamation-triangle-fill text-danger"></i> Error:</strong>
                                <p class="mb-0 mt-1 text-danger">Error al procesar la consulta. Por favor, intenta de nuevo.</p>
                            </div>
                        `;
                        $('#aiResponseArea').append(errorResponse);
                        $('#aiResponseArea').scrollTop($('#aiResponseArea')[0].scrollHeight);
                    },
                    complete: function() {
                        // Habilitar input y botón
                        $('#aiQueryInput').prop('disabled', false).val('').focus();
                        $('#askAiBtn').prop('disabled', false);
                    }
                });
            }

            function escapeHtml(text) {
                const map = {
                    '&': '&amp;',
                    '<': '&lt;',
                    '>': '&gt;',
                    '"': '&quot;',
                    "'": '&#039;'
                };
                return text.replace(/[&<>"']/g, m => map[m]);
            }
        });
    </script>
}
