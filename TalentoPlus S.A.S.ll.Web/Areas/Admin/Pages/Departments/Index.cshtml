@page
@model TalentoPlus_S.A.S.ll.Web.Areas.Admin.Pages.Departments.IndexModel
@{
    ViewData["Title"] = "Gestión de Departamentos";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col">
            <h1 class="display-4">
                <i class="bi bi-building"></i> Gestión de Departamentos
            </h1>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>Nombre</th>
                            <th>Cantidad de Empleados</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var department in Model.Departments)
                        {
                            <tr>
                                <td>
                                    <strong>@department.Name</strong>
                                </td>
                                <td>
                                    <span class="badge bg-primary">@department.Employees.Count empleados</span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
}

