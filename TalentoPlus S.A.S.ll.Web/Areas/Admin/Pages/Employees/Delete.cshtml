@page
@model TalentoPlus_S.A.S.ll.Web.Areas.Admin.Pages.Employees.DeleteModel
@{
    ViewData["Title"] = "Eliminar Empleado";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0">
                        <i class="bi bi-exclamation-triangle-fill"></i> Confirmar Eliminación
                    </h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger" role="alert">
                        <h5>
                            <i class="bi bi-exclamation-circle"></i> ¿Está seguro que desea eliminar este empleado?
                        </h5>
                        <p class="mb-0">Esta acción no se puede deshacer.</p>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-12">
                            <h4 class="text-danger">@Model.Employee.FullName</h4>
                            <p class="text-muted">@Model.Employee.Position</p>
                        </div>
                    </div>

                    <hr />

                    <dl class="row">
                        <dt class="col-sm-3">Email</dt>
                        <dd class="col-sm-9">@Model.Employee.Email</dd>

                        <dt class="col-sm-3">Teléfono</dt>
                        <dd class="col-sm-9">@Model.Employee.Phone</dd>

                        <dt class="col-sm-3">Departamento</dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-info">@Model.Employee.Department?.Name</span>
                        </dd>

                        <dt class="col-sm-3">Salario</dt>
                        <dd class="col-sm-9">$@Model.Employee.Salary.ToString("N2")</dd>

                        <dt class="col-sm-3">Estado</dt>
                        <dd class="col-sm-9">
                            @if (Model.Employee.Status == TalentoPlus_S.A.S.ll.Web.Data.Entities.EmployeeStatus.Active)
                            {
                                <span class="badge bg-success">Activo</span>
                            }
                            else if (Model.Employee.Status == TalentoPlus_S.A.S.ll.Web.Data.Entities.EmployeeStatus.Inactive)
                            {
                                <span class="badge bg-danger">Inactivo</span>
                            }
                            else
                            {
                                <span class="badge bg-warning">Vacaciones</span>
                            }
                        </dd>
                    </dl>

                    <hr />

                    <form method="post">
                        <input type="hidden" asp-for="Employee.Id" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-page="Index" class="btn btn-secondary btn-lg">
                                <i class="bi bi-x-circle"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger btn-lg">
                                <i class="bi bi-trash"></i> Confirmar Eliminación
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
}

