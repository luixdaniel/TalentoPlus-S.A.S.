@page
@model TalentoPlus_S.A.S.ll.Web.Areas.Admin.Pages.Employees.IndexModel
@{
    ViewData["Title"] = "Gestión de Empleados";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col">
            <h1 class="display-4">
                <i class="bi bi-people-fill"></i> Gestión de Empleados
            </h1>
        </div>
        <div class="col text-end">
            <a asp-page="Create" class="btn btn-primary btn-lg">
                <i class="bi bi-plus-circle"></i> Nuevo Empleado
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>Nombre Completo</th>
                            <th>Email</th>
                            <th>Cargo</th>
                            <th>Departamento</th>
                            <th>Salario</th>
                            <th>Estado</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var employee in Model.Employees)
                        {
                            <tr>
                                <td>
                                    <strong>@employee.FullName</strong>
                                </td>
                                <td>
                                    <i class="bi bi-envelope"></i> @employee.Email
                                </td>
                                <td>@employee.Position</td>
                                <td>
                                    <span class="badge bg-info">@employee.Department?.Name</span>
                                </td>
                                <td>$@employee.Salary.ToString("N2")</td>
                                <td>
                                    @if (employee.Status == TalentoPlus_S.A.S.ll.Web.Data.Entities.EmployeeStatus.Active)
                                    {
                                        <span class="badge bg-success">Activo</span>
                                    }
                                    else if (employee.Status == TalentoPlus_S.A.S.ll.Web.Data.Entities.EmployeeStatus.Inactive)
                                    {
                                        <span class="badge bg-danger">Inactivo</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">Vacaciones</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-page="Details" asp-route-id="@employee.Id" class="btn btn-sm btn-info" title="Ver detalles">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-page="Edit" asp-route-id="@employee.Id" class="btn btn-sm btn-warning" title="Editar">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-page="Delete" asp-route-id="@employee.Id" class="btn btn-sm btn-danger" title="Eliminar">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (!Model.Employees.Any())
            {
                <div class="alert alert-info text-center">
                    <i class="bi bi-info-circle"></i> No hay empleados registrados. 
                    <a asp-page="Create" class="alert-link">Crear el primero</a>
                </div>
            }
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
}

